<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/popup_operate_up_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/long_click_select_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/text_whilte"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/long_click_check_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@id/long_click_check_cancel"
            android:drawableTop="@drawable/ic_long_click_check_all"
            android:gravity="center"
            android:text="全选"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/long_click_check_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableTop="@drawable/ic_long_click_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffff" />

    </RelativeLayout>

    <com.elick.personalcloud.widget.SwipeRefreshRecyclerView
        android:id="@+id/swipe_refresh_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/popup_operate_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#1b1c28"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/long_click_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_long_click_delete"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/text_whilte" />

        <TextView
            android:id="@+id/long_click_check_move"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_long_click_move"
            android:gravity="center"
            android:text="移动"
            android:textColor="@color/text_whilte" />

        <TextView
            android:id="@+id/long_click_check_rename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_long_click_rename"
            android:gravity="center"
            android:text="重命名"
            android:textColor="@color/text_whilte" />

        <TextView
            android:id="@+id/long_click_check_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_long_click_copy"
            android:gravity="center"
            android:text="重命名"
            android:textColor="@color/text_whilte" />

        <TextView
            android:id="@+id/long_click_check_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_long_click_download"
            android:gravity="center"
            android:text="重命名"
            android:textColor="@color/text_whilte" />
    </LinearLayout>
</LinearLayout>
